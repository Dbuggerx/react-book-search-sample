// Place your settings in this file to overwrite the default settings
{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.minimap.enabled": true,
  "editor.renderIndentGuides": true,
  "prettier.tslintIntegration": false,
  "prettier.singleQuote": true,
  "stylelint.enable": true,
  "stylelint.config": { "extends": "./config/linters/.stylelintrc.json" },
  "css.validate": false,
  "scss.validate": false,
  "editor.codeLens": true,
  "typescript.referencesCodeLens.enabled": true,
  "eslint.enable": true,
  "eslint.options": {
    "configFile": "./config/linters/.eslintrc.json"
  },
  "eslint.validate": ["javascript", "typescript", "typescriptreact"],
  "prettier.stylelintIntegration": true,
  "eslint.alwaysShowStatus": true,
  "prettier.eslintIntegration": true,
  "jest.pathToJest": "",
  "jest.pathToConfig": "config/jest/config.json",
  "jest.restartJestOnSnapshotUpdate": true,
  "cucumberautocomplete.onTypeFormat": true,
  "cucumberautocomplete.steps": ["testcafe/steps/*.js"],
  "cucumberautocomplete.syncfeatures": "testcafe/features/*feature",
  "cucumberautocomplete.strictGherkinValidation": true,
  "cucumberautocomplete.smartSnippets": true,
  "cucumberautocomplete.stepsInvariants": true
}
